<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <Button
        android:id="@+id/switch_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/camera_place"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/camera_condition"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/camera_place"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/camera_place"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/camera_name"
        app:layout_constraintStart_toEndOf="@+id/switch_camera"
        app:layout_constraintEnd_toStartOf="@+id/camera_condition"
        tools:text="Light place"
        />

    <TextView
        android:id="@+id/camera_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_x1"
        android:layout_marginStart="@dimen/space_x1"
        android:layout_marginEnd="@dimen/space_x1"
        app:layout_constraintTop_toBottomOf="@+id/camera_place"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/switch_camera"
        app:layout_constraintEnd_toStartOf="@+id/camera_condition"
        tools:text="Light 0"
        />

</androidx.constraintlayout.widget.ConstraintLayout>