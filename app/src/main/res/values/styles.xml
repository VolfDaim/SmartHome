<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/dark_primary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="dividerColor">@color/divider_text</item>
        <item name="titleTextStyle">@style/AppText</item>
    </style>
    <style name="AppText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/basic</item>
        <item name="colorControlHighlight">@color/pressed</item>
    </style>
</resources>